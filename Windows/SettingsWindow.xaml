<!-- SettingsPage.xaml (Theme Selection) -->
<Window x:Class="ChessWPF.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="800">
    <!-- Window contents here -->
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Border Background="{StaticResource CardBrush}" CornerRadius="10" Padding="40"
            HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                <StackPanel>
                    <TextBlock Text="Select Theme" FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                    <Button Content="Classic Wood" Style="{StaticResource NavButtonStyle}" Click="ClassicWood_Click"/>
                    <Button Content="Gray" Style="{StaticResource NavButtonStyle}" Click="Gray_Click"/>
                    <Button Content="Green" Style="{StaticResource NavButtonStyle}" Click="Green_Click"/>
                    <Button Content="Blue" Style="{StaticResource NavButtonStyle}" Click="Blue_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
