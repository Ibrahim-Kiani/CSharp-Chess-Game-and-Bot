<Window x:Class="ChessWPF.Windows.PromotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Promote Pawn" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
  <StackPanel Margin="20" HorizontalAlignment="Center">
    <TextBlock Text="Choose Promotion" FontSize="20" FontWeight="Bold"
               Margin="0,0,0,10" HorizontalAlignment="Center"/>
    <UniformGrid Columns="4" Rows="1" Margin="0,10">
      <Button Content="Queen"   Click="Queen_Click"  Margin="5" MinWidth="70"/>
      <Button Content="Rook"    Click="Rook_Click"   Margin="5" MinWidth="70"/>
      <Button Content="Bishop"  Click="Bishop_Click" Margin="5" MinWidth="70"/>
      <Button Content="Knight"  Click="Knight_Click" Margin="5" MinWidth="70"/>
    </UniformGrid>
  </StackPanel>
</Window>
